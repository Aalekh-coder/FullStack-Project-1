<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <h3>Create a new Listing</h3>
    <br />
    <form action="/listings" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Enter Title</label>
        <input
          id="title"
          class="form-control"
          type="text"
          placeholder=" Enter place name"
          name="listing[title]"
          required
        />
        <div class="invalid-feedback">Write the name of property</div>
        <div class="valid-feedback">Title looks good!</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Enter description</label>
        <textarea
          id="description"
          type="text"
          placeholder="write about the place"
          name="listing[description]"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please write some things property</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload image</label>
        <input
          id="image"
          class="form-control"
          name="listing[image]"
          type="file"
          required
          />
          <div class="invalid-feedback">Paste some property image</div>
      </div>
      <div class="row">
        <div class="mb-3 col-4">
          <label for="price" class="form-label">Enter Price</label>
          <input
            id="price"
            class="form-control"
            type="number"
            placeholder="Enter place price"
            name="listing[price]"
            required
          />
          <div class="invalid-feedback">Please enter the valid price</div>
        </div>

        <div class="mb-3 col-8">
          <label for="location" class="form-label">Enter location</label>
          <input
            id="location"
            class="form-control"
            type="text"
            placeholder="Enter location"
            name="listing[location]"
            required
          />
          <div class="invalid-feedback">Please enter the locations</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="country" class="form-label">Enter country</label>
        <input
          id="country"
          class="form-control"
          type="text"
          placeholder="Enter country"
          name="listing[country]"
          required
        />
        <div class="invalid-feedback">Please enter the country</div>
      </div>
      <br />
      <button class="btn add-btn">Add</button>
      <br />
      <br />
    </form>
  </div>
</div>
